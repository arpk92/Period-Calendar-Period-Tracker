<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Activity.Perioddetails">

    <TableLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:id="@+id/daytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="Sunday"
                android:textColor="#D06974"
                android:textSize="50dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="Period"
                android:textColor="#D06974"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Periodtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="1"
                android:textColor="#D06974"
                android:textSize="20dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="class"
                android:textColor="#D06974"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/classtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="2/2"
                android:textColor="#D06974"
                android:textSize="20dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="Time"
                android:textColor="#D06974"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/timetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="2/2"
                android:textColor="#D06974"
                android:textSize="20dp" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        style="@android:style/ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clearbutt"
            android:layout_weight="1"
            android:background="@drawable/butoon"
            android:text="@string/clear"
            android:textColor="@color/colorAccent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/butoon"
            android:id="@+id/editbutt"
            android:text="@string/edit"
            android:textColor="@color/colorAccent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/butoon"
            android:id="@+id/closebutt"
            android:text="@string/close"
            android:textColor="@color/colorAccent" />
    </LinearLayout>


</RelativeLayout>